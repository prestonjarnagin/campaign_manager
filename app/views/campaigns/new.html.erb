<%= render partial: "application/navbar" %>
<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end %>

<%= form_for @campaign do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, class: "", placeholder: "Campaign Name" %>
  </div>

  <div class="fields">
    <%= f.fields_for :tasks do |builder| %>
        <%= render 'message', f: builder %>
        <br>
    <% end %>
  </div>

  <%= f.submit 'Create Campaign', class: "" %>
<% end %>
